name: Rez Package

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.x'

    - name: Install Rez from source
      run: |
        git clone https://github.com/AcademySoftwareFoundation/rez.git
        cd rez
        python install.py
      shell: bash

    - name: Find rez-build and add to PATH (Ubuntu)
      run: |
        REZ_BUILD_PATH=$(which rez-build || true)
        if [ -n "$REZ_BUILD_PATH" ]; then
          REZ_BUILD_DIR=$(dirname "$REZ_BUILD_PATH")
          echo "$REZ_BUILD_DIR" >> $GITHUB_PATH
        fi
      shell: bash

    - name: Build with Rez
      run: rez-build .
      shell: bash

    - name: Upload Rez package artifact
      uses: actions/upload-artifact@v4
      with:
        name: rez-package
        path: |
          dist/